#!/bin/bash
#
# makesymlinks
# Gustavo Franco - <stratus@acm.org>

RCS=".vimrc .gitconfig"

if [ ! $1 ]; then
  echo "Usage: makesymlinks <path to dotrc.git local copy>"
  exit 1
fi
DOTRC=$1

for RC in $RCS; do
  if [ -L "~/$RC" ]; then
    echo "~/$RC is a symlink already, skipping."
    continue
  fi
  if [ -d "~/$RC" ]; then
    echo "~/$RC is a directory, skipping."
    continue
  fi
  if [ -f "~/$RC" ]; then
    mv ~/$RC ~/$RC.bak
  fi
  ln -s $DOTRC/$RC ~/$RC
done
